<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="1"
        android:background="@color/authui_inputTextColor"
        android:animateLayoutChanges="false"
        android:fadingEdge="horizontal|vertical">
        <TextView
            android:text="In This Section, the coach can follow his trainees moment by moment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/coach_inf"
            android:layout_weight="0.5"
            android:textSize="24sp"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/authui_inputTextColorDark"
            android:textStyle="normal|bold|italic"
            android:textAllCaps="true"
            android:gravity="center"
            android:fontFamily="casual"
            android:textAlignment="center" />

        <TextView
            android:text="*note: The maximum number of trainees the coach can follow is '8' trainees "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/note"
            android:layout_weight="0.25"
            android:textSize="12sp"
            android:textColor="@color/authui_inputTextColorDark"
            android:gravity="left|center"
            android:layout_marginLeft="7dp"
            android:textStyle="normal|bold"
            android:textAllCaps="true" />

        <ImageButton
            android:layout_width="match_parent"
            app:srcCompat="@drawable/arrow_icon"
            android:id="@+id/coach_button"
            android:layout_height="70dp"
            android:scaleType="fitEnd"
            android:background="@color/authui_inputTextColor"
            android:layout_weight="0.25"
            android:layout_gravity="center"
            android:layout_marginRight="10dp" />

    </LinearLayout>



</LinearLayout>